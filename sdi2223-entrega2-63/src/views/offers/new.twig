{% extends "layout.twig" %}

{% block title %} Nueva Oferta {% endblock %}

{% block main_container %}
  <h2>Crear Oferta</h2>
  <form class="form-horizontal" method="post" action="/offers/new" >
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Título:</label>
      <div class="col-sm-10">
        <input id="title" type="text" class="form-control" name="title"
            placeholder="Título de tú oferta" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="description">Descripción:</label>
      <div class="col-sm-10">
        <textarea id="description" class="form-control" placeholder="Descripción de tú oferta" name="description"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="price">Precio:</label>
      <div class="col-sm-10">
        <input id="price" type="number" class="form-control" name="price"
            placeholder="Precio de tú oferta en euros" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="price">Destacar oferta (20€):</label>
      <div class="col-sm-10">
        <input id="price" type="checkbox" class="form-control" name="featured"
            placeholder="Precio de tú oferta en euros" />
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Crear</button>
      </div>
    </div>
  </form>
{% endblock %}