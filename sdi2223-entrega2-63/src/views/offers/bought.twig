{% extends "layout.twig" %}

{% block title %} Ofertas Compradas {% endblock %}

{% block main_container %}
  <h2>Ofertas Compradas</h2>
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
			<tr>
				<th>Título</th>
				<th>Descripción</th>
				<th>Precio</th>
        <th>Vendedor</th>
			</tr>
			</thead>
			<tbody>
			{% for offer in offers %}
				<tr>
					<td>{{ offer.title }}</td>
					<td>{{ offer.description }}</td>
					<td>{{ offer.price }} €</td>
					<td>{{ offer.seller }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="row text-center">
			<ul class="pagination">
					{% for page in pages %}
					<li class="page-item {{ page == currentPage ? 'active' : '' }}">
							<a href="/offers/my-offers?page={{ page }}" class="page-link">{{ page }}</a>
					</li>
					{% endfor %}
			</ul>
	</div>
{% endblock %}