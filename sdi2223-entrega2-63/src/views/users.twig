{% extends "layout.twig" %}

{% block title %} Usuarios {% endblock %}

{% block main_container %}
    <h2>Usuarios:</h2>
    <form method="post" action="/users/delete">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellidos</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>
                        {%  if user.email != "admin@email.com" %}
                        <input type="checkbox" name="selectedUsers" value="{{ user.email }}">
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
    <div class="row text-center">
        <button class="btn btn-info" type="submit" role="button">Eliminar seleccionados</button>
    </div>
    </form>
{% endblock %}