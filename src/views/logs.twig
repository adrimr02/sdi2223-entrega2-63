{% extends "layout.twig" %}

{% block title %} Logs {% endblock %}

{% block main_container %}
    <h2>Logs del sistema:</h2>
    <form method="post" action="/logs">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Time</th>
                    <th>Message</th>
                </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.timestamp }}</td>
                        <td>{{ log.message }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
        <div class="row text-center">
            <ul class="pagination">
                {% for page in pages %}
                    <li class="page-item" id="pi-{{ page }}">
                        <a class="page-link" href="/logs/?page={{ page }}">{{ page }}</a>
                    </li>
                {% endfor %}
                <script>
                    $("#pi-"+"{{ currentPage }}").addClass("active");
                </script>
            </ul>
        </div>
        <div class="row text-center">
            <button class="btn btn-info" type="submit" role="button">Eliminar todos los logs</button>
        </div>
    </form>
{% endblock %}